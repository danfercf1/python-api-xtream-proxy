# --- Bot mitigation / proxy settings ---
# Requests per minute per IP for /player_api.php (set lower if you're being flooded)
RATE_LIMIT_PLAYER_API_PER_MINUTE=30
# Requests per minute per IP for the catch-all redirect route
RATE_LIMIT_REDIRECT_PER_MINUTE=120
# Only set true if running behind a trusted reverse proxy that sets X-Forwarded-For
TRUST_PROXY_HEADERS=false

# --- Upstream request profile (to mimic IPTV apps like TiviMate) ---
UPSTREAM_USER_AGENT="Mozilla/5.0 (Linux; Android 11) AppleWebKit/537.36 (KHTML, like Gecko) Version/4.0 Chrome/120.0 Mobile Safari/537.36"
UPSTREAM_TIMEOUT_SECONDS=20

# Sync scripts: disable playlist fallback by default.
# Set to 1 only if you want sync to fall back to get.php when player_api.php is blocked.
ENABLE_M3U_FALLBACK=0

# Sync streams cleaning: remove fake "category header" rows (e.g. ###### ECUADOR ######)
STREAM_SKIP_NAME_REGEX=^#+\\s*.+\\s*#+$